{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "./",
    "lib": [
      "es6",
      "dom"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}